{
    // ------------------------------------
    // 1. (기존) 파일 연관 설정
    // ------------------------------------
    "files.associations": {
        "array": "c",
        "string_view": "c",
        "initializer_list": "c",
        "unistd.h": "c",
        "main.h": "c",
        "lib.h": "c",
        "*.inc": "c",
        "iosfwd": "c",
        "limits": "c",
        "streambuf": "c"
    },

    // ------------------------------------
    // 2. (기존) 자동 포맷팅 (clang-format)
    // ------------------------------------
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    },

    // [중요] 이 경로는 bear로 생성한 파일 위치에 맞게 설정되어야 합니다.
    "C_Cpp.codeAnalysis.databaseFilename": "${workspaceFolder}/pintos/userprog/compile_commands.json",

    // "C_Cpp.formatting": "clangFormat",
    // "C_Cpp.clang_format_style": "file:${workspaceFolder}/.clang-format",
    // "C_Cpp.clang_format_fallbackStyle": "none"
}